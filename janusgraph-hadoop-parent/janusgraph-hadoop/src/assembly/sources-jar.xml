<assembly>
    <id>sources</id>
    <baseDirectory>/</baseDirectory>

    <formats>
        <format>jar</format>
    </formats>

    <dependencySets>
      <dependencySet>
	<useProjectArtifact>false</useProjectArtifact>
	<unpack>true</unpack>
	<unpackOptions>
	  <excludes>
	    <exclude>META-INF/**</exclude>
	  </excludes>
	</unpackOptions>
	<includes>
	  <include>${project.groupId}:${project.artifactId}-*:jar:sources:${project.version}</include>
	</includes>
      </dependencySet>
    </dependencySets>
</assembly>
