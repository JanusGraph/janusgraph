<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.thinkaurelius.titan</groupId>
        <artifactId>titan-dist</artifactId>
        <version>0.5.1-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>
    <packaging>pom</packaging>
    <artifactId>titan-dist-hadoop-2</artifactId>
    <name>Titan-Dist: Archive with Hadoop 2</name>
    <url>http://thinkaurelius.github.com/titan/</url>

    <properties>
        <hadoop.version.tag>hadoop2</hadoop.version.tag>
        <assembly.descriptor.dir>${project.parent.basedir}/src/assembly/descriptor</assembly.descriptor.dir>
        <assembly.resources.dir>${project.parent.basedir}/src/assembly/resources</assembly.resources.dir>
        <assembly.static.dir>${project.parent.basedir}/src/assembly/static</assembly.static.dir>
        <top.level.basedir>${project.parent.parent.basedir}</top.level.basedir>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.apache.hbase</groupId>
            <artifactId>hbase-client</artifactId>
            <version>0.98.2-hadoop2</version>
        </dependency>
        <dependency>
            <groupId>org.apache.hbase</groupId>
            <artifactId>hbase-server</artifactId>
            <!-- Need the -server artifact for hbase.mapreduce.TableInputFormat (Faunus) -->
            <version>0.98.2-hadoop2</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
            </plugin>

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>generate-titan-gremlin-imports</id>
                        <phase>generate-resources</phase>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>properties-maven-plugin</artifactId>
            </plugin>

            <plugin>
                <artifactId>maven-gpg-plugin</artifactId>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>aurelius-release</id>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-failsafe-plugin</artifactId>
                    </plugin>

                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>wagon-maven-plugin</artifactId>
                    </plugin>

                    <plugin>
                        <artifactId>maven-resources-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>filter-cassandra-murmur-config</id>
                                <phase>process-test-resources</phase>
                            </execution>
                            <execution>
                                <id>filter-cassandra-bop-config</id>
                                <phase>process-test-resources</phase>
                            </execution>
                            <execution>
                                <id>filter-expect-scripts</id>
                                <phase>process-test-resources</phase>
                            </execution>
                            <execution>
                                <id>filter-test-resources</id>
                                <phase>process-test-resources</phase>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>dev-install-hadoop2</id>

            <activation>
                <property>
                    <name>dev.hadoop</name>
                    <value>2</value>
                </property>
            </activation>

            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-clean-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>clean-dev-dirs-hadoop2</id>
                                <phase>clean</phase>
                                <goals>
                                    <goal>clean</goal>
                                </goals>
                                <configuration>
                                    <excludeDefaultDirectories>true</excludeDefaultDirectories>
                                    <filesets>
                                        <fileset>
                                            <directory>${top.level.basedir}/bin/</directory>
                                        </fileset>
                                        <fileset>
                                            <directory>${top.level.basedir}/conf/</directory>
                                        </fileset>
                                        <fileset>
                                            <directory>${top.level.basedir}/db/</directory>
                                        </fileset>
                                        <fileset>
                                            <directory>${top.level.basedir}/ext/</directory>
                                        </fileset>
                                        <fileset>
                                            <directory>${top.level.basedir}/lib/</directory>
                                        </fileset>
                                        <fileset>
                                            <directory>${top.level.basedir}/log/</directory>
                                        </fileset>
                                    </filesets>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>

                    <plugin>
                        <artifactId>maven-assembly-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>install-dev-dirs-hadoop2</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>single</goal>
                                </goals>
                                <configuration>
                                    <attach>false</attach>
                                    <outputDirectory>${top.level.basedir}</outputDirectory>
                                    <finalName>/</finalName>
                                    <appendAssemblyId>false</appendAssemblyId>
                                    <descriptors>
                                        <descriptor>src/assembly/descriptor/filesystem.xml</descriptor>
                                    </descriptors>
                                    <formats combine.self="override">
                                        <format>dir</format>
                                    </formats>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

    </profiles>
</project>
