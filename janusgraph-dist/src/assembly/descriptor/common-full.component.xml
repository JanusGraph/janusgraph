<component xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/component/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/component/1.1.2 http://maven.apache.org/xsd/component-1.1.2.xsd">

    <fileSets>
        <fileSet>
            <directory>${assembly.static.dir}</directory>
            <outputDirectory>/</outputDirectory>
            <filtered>false</filtered>
            <excludes>
                <exclude>README.txt</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>${assembly.resources.dir}</directory>
            <outputDirectory>/</outputDirectory>
            <filtered>true</filtered>
        </fileSet>
        <fileSet>
            <directory>${assembly.cfilter.out.dir}</directory>
            <outputDirectory>/</outputDirectory>
            <filtered>false</filtered>
        </fileSet>
        <fileSet>
            <directory>${assembly.cassandra.dir}</directory>
            <outputDirectory>/cassandra</outputDirectory>
            <filtered>false</filtered>
            <excludes>
                <exclude>**/bin/cassandra</exclude>
                <exclude>**/bin/*.bat</exclude>
                <exclude>**/bin/*.ps1</exclude>
                <exclude>**/conf/cassandra.yaml</exclude>
                <exclude>**/conf/jvm.options</exclude>
                <exclude>**/conf/logback.xml</exclude>
                <exclude>**/data/**</exclude>
                <exclude>**/logs/**</exclude>
                <exclude>**/doc/**</exclude>
                <exclude>**/javadoc/**</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>${assembly.es.dir}</directory>
            <outputDirectory>/elasticsearch</outputDirectory>
            <filtered>false</filtered>
            <excludes>
              <exclude>**/elasticsearch.yml</exclude>
              <exclude>**/jvm.options</exclude>
              <exclude>**/data/**</exclude>
              <exclude>**/logs/**</exclude>
            </excludes>
        </fileSet>
    </fileSets>

    <dependencySets>
        <!-- Code jars -->
        <dependencySet>
            <outputDirectory>/lib</outputDirectory>
            <unpack>false</unpack>
            <scope>runtime</scope>
            <useProjectArtifact>false</useProjectArtifact>
            <includes>
                <include>*:*:jar:*</include>
            </includes>
            <excludes>
                <exclude>${project.groupId}:janusgraph-core:jar:javadoc:${project.version}</exclude>
            </excludes>
        </dependencySet>

        <!-- Example data (from janusgraph-hadoop/faunus) -->
        <dependencySet>
            <unpack>true</unpack>
            <outputDirectory>/examples</outputDirectory>
            <useProjectArtifact>false</useProjectArtifact>
            <includes>
                <include>${project.groupId}:janusgraph-hadoop:zip:example-data:${project.version}</include>
            </includes>
        </dependencySet>
    </dependencySets>
</component>
