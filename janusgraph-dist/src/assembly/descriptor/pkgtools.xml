<assembly>
    <id>pkg-tools</id>
    <baseDirectory>/</baseDirectory>

    <formats>
        <format>dir</format>
    </formats>

    <fileSets>
        <fileSet>
            <directory>src/pkg/static</directory>
            <filtered>false</filtered>
            <outputDirectory>/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>src/pkg/resources</directory>
            <filtered>true</filtered>
            <outputDirectory>/</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>
